<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomepageController</servlet-name>
        <servlet-class>controller.HomepageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoryController</servlet-name>
        <servlet-class>controller.StoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListChapter</servlet-name>
        <servlet-class>controller.ListChapter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>authentication.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>controller.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LibraryController</servlet-name>
        <servlet-class>controller.LibraryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>controller.DeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToLibrary</servlet-name>
        <servlet-class>controller.AddToLibrary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditController</servlet-name>
        <servlet-class>controller.EditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditChapterController</servlet-name>
        <servlet-class>controller.editchapter.EditChapterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewChapter</servlet-name>
        <servlet-class>controller.editchapter.AddNewChapter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>authentication.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewBook</servlet-name>
        <servlet-class>controller.AddNewBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomepageController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoryController</servlet-name>
        <url-pattern>/story</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListChapter</servlet-name>
        <url-pattern>/listchapter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LibraryController</servlet-name>
        <url-pattern>/library</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToLibrary</servlet-name>
        <url-pattern>/addtolibrary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditController</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditChapterController</servlet-name>
        <url-pattern>/editchapter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewChapter</servlet-name>
        <url-pattern>/addnewchapter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewBook</servlet-name>
        <url-pattern>/addnewbook</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
